{% extends "FrontSynchroniserBundle::layout.html.twig" %}

{% block frontsynchroniser_body %}
    <div class="col-xs-3">
        <div class="panel panel-default">
            <div class="panel-heading">
                Templates
            </div>
            <div class="panel-body">
                <ul class="nav nav-pills nav-stacked">
                    {% for item in list %}
                        <li>
                            <a href="{{ path("debug_frontsynchroniser_showtemplate", {name: item.file }) }}" target="right">{{ item.file }}</a>
                            <ul>
                                <li> <a href="{{ path("debug_frontsynchroniser_edittemplate", { name: item.meta.name }) }}" target="_blank">{{ item.meta.name }}</a> </li>
                            </ul>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
    <div class="col-xs-9">
        <div class="panel panel-default">
            <div class="panel-heading">
                Affichage
            </div>
            <div class="panel-body">
                <iframe src="" class="col-xs-12" frameborder="0" name="right" style="height: 600px;"></iframe>
            </div>
        </div>
    </div>
{% endblock %}